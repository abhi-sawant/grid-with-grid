{
  "name": "frontend-setup",
  "version": "1.1.1",
  "description": "A minimal frontend setup for a new project",
  "author": "Abhishek Sawant",
  "main": "index.html",
  "scripts": {
    "compile-sass": "sass scss/grid-with-grid.scss:dist/css/grid-with-grid.css",
    "build-sass": "sass scss/grid-with-grid.scss:dist/css/grid-with-grid.css --no-source-map",
    "watch-sass": "onchange scss/ -- npm run compile-sass",
    "compile-js": "terser js/script.js --compress --mangle --output dist/js/script.js --source-map \"root='js',url='script.js.map'\" ",
    "build-js": "terser js/script.js --compress --mangle --output dist/js/script.js",
    "watch-js": "onchange js/script.js -- npm run compile-js",
    "post-prefix": "postcss dist/css/grid-with-grid.css -u autoprefixer -r --no-map",
    "post-nano": "postcss dist/css/grid-with-grid.css -u cssnano -r --no-map",
    "watch": "npm-run-all --parallel watch-*",
    "compile": "npm-run-all --parallel compile-*",
    "post": "postcss dist/css/grid-with-grid.css -u autoprefixer -u cssnano -r --no-map",
    "serve": "browser-sync start --server ./ --files ./",
    "start": "npm-run-all compile --parallel watch serve",
    "build": "npm-run-all build-* post del-map",
    "del-map": "del-cli dist/**/*.map"
  },
  "dependencies": {
    "autoprefixer": "^10.4.8",
    "browser-sync": "^2.27.10",
    "cssnano": "^5.1.13",
    "del-cli": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "sass": "^1.54.8",
    "terser": "^5.15.0"
  }
}
